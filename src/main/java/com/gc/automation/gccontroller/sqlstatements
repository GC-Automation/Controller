CREATE TABLE GCADMIN.UNITS
(UNIT_ID VARCHAR(25) NOT NULL,
UNIT_NAME VARCHAR(25) NOT NULL,
UNIT_CHANNEL_SIZE INTEGER,
PRIMARY KEY (UNIT_ID));

CREATE TABLE GCADMIN.CHANNELS
(CHANNEL_ID VARCHAR(25) NOT NULL,
CHANNEL_NAME VARCHAR(25) NOT NULL,
CHANNEL_NUMBER INTEGER NOT NULL,
UNIT_ID VARCHAR(25) NOT NULL,
SCHEDULE_ID VARCHAR(25),
PRIMARY KEY (CHANNEL_ID));

CREATE TABLE GCADMIN.SCHEDULES
(SCHEDULE_ID VARCHAR(25) NOT NULL,
SCHEDULE_NAME VARCHAR(25) NOT NULL,
SCHEDULE_ACTIVE VARCHAR(25) NOT NULL,
SCHEDULE_CRON VARCHAR(25) NOT NULL,
SCHEDULE_DURATION INTEGER DEFAULT 5 NOT NULL,
PRIMARY KEY (SCHEDULE_ID));

CREATE TABLE GCADMIN.USERS
(USERNAME VARCHAR(25) NOT NULL,
PASSWORD VARCHAR(25) NOT NULL,
EMAIL LONG VARCHAR NOT NULL,
PHOTO BLOB,
ROLE VARCHAR(25) NOT NULL,
PASSWORD_CIPHER VARCHAR(25) NOT NULL,
PRIMARY KEY (USERNAME));